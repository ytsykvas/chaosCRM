h2.mb-5 = t('devise.registrations.new.title')

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.error_notification

  .form-inputs
    .row
      .col
        = f.input :first_name,
                label: t('devise.registrations.new.first_name'),
                required: true,
                autofocus: true,
                input_html: { class: "form-control",
                        style: "text-transform: capitalize;",
                        autocomplete: t('devise.registrations.new.first_name'),
                        placeholder: t('devise.registrations.new.first_name'),
                        "data-test-id": "first-name-input" }
      .col
        = f.input :last_name,
                label: t('devise.registrations.new.second_name'),
                required: true,
                autofocus: true,
                input_html: { class: "form-control",
                        style: "text-transform: capitalize;",
                        autocomplete: t('devise.registrations.new.second_name'),
                        placeholder: t('devise.registrations.new.second_name'),
                        "data-test-id": "last-name-input"}
    .row
      .col
        = f.input :email,
                label: t('devise.registrations.new.email'),
                required: true,
                autofocus: true,
                input_html: { class: "form-control",
                        placeholder: t('devise.registrations.new.email'),
                        "data-test-id": "email-input" }
      .col
        = f.input :phone,
                label: t('devise.registrations.new.phone'),
                required: true,
                autofocus: true,
                input_html: { class: "form-control",
                        placeholder: t('devise.registrations.new.phone'),
                        "data-test-id": "phone-number-input" }
    = f.input :password,
            label: t('devise.registrations.new.password'),
            required: true,
            hint: (t('devise.registrations.new.six_or_more', number: @minimum_password_length) if @minimum_password_length),
            input_html: { placeholder: t('devise.registrations.new.password_hint'), "data-test-id": "password-input" }
    = f.input :password_confirmation,
            label: t('devise.registrations.new.password_confirmation'),
            required: true,
            input_html: { "data-test-id": "password-confirmation-input" }

  .form-actions
    = f.button :submit, t('devise.registrations.new.submit_button'), class: "btn btn-dark"
.mt-3
  = render "devise/shared/links"
